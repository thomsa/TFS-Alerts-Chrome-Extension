{
    "name": "TFS ALERTS",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "This extension alerts when you move tasks on TFS board",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "default_locale": "en",
    "background": {
        "page": "src/bg/background.html",
        "persistent": true
    },
    "content_scripts": [{
        "matches": ["https://developer.chrome.com/extensions/content_scripts/*"],
        "js": ["js/jquery/jquery.min.js", "src/content.js"]
    }],
    "options_page": "src/options/index.html",
    "page_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "page action demo",
        "default_popup": "src/page_action/page_action.html"
    }

}